
<div class="container text-center">

<div class="jumbotron jumbotron-billboard text-center">
  <div class="img"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Eat-Da-Burger!!</h1>
                <hr class="my-4">
                <p>Select a Burger to Devour!!Or Make your own burger...</p>
            </div>
        </div>
    </div>
</div>

  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><h2>Pick a Burger to Devour!</h2></h3>
        </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                <button data-id="{{id}}" class="btn btn-danger btn-lg devour-burger">{{burger_name}}</button>
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><h2>Burgers that have been devoured!</h2></h3>
        </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                <p>#{{id}} {{burger_name}}</p>
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

<form class="form-inline create-form" action = "/" method="POST">

  <div class="form-group"> 
    <label for="burger" class="control-label"><h3>New Burger</h3></label>
    <input type="text" class="form-control" id="bur" name="burger" placeholder="ie:Cheese Burger">
  </div>
  
  <div class="form-group"> 
    <button type="submit" class="btn btn-danger btn-lg">Add</button>
  </div>    
  
</form> 

